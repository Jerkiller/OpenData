            <TextBlock Text="Open Veneto" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="352*"/>
                <RowDefinition Height="255*"/>
            </Grid.RowDefinitions>
            <Button Content="Ve" HorizontalAlignment="Left" Margin="307.987,259.687,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="103.836" UseLayoutRounding="False" Width="119.981" d:LayoutRounding="Auto" FontSize="50" Background="#FF0A3787" Click="Button7_Click" Grid.RowSpan="2" Canvas.ZIndex="20">
